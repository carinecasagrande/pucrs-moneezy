<main class="content border">
  <div class="content-left"><%- include('../partials/vector') %></div>
  <form id="form-login" class="content-right">
    <%- include('../partials/logo') %>
    <div>
      <label for="form-login[email]" class="required">
        <%- page.i18n.email_field %>
      </label>
      <input
        type="text"
        id="form-login[email]"
        name="email"
        class="form-control"
        autocomplete="username"
      />
    </div>
    <div>
      <div class="field-password-label">
        <label for="form-login[password]" class="required">
          <%- page.i18n.password_field %>
        </label>
        <a href="/request-new-password"><%- page.i18n.forgot_password %></a>
      </div>
      <div class="field-password">
        <input
          type="password"
          id="form-login[password]"
          name="password"
          class="form-control"
          autocomplete="current-password"
        />
        <span
          tabindex="0"
          class="sap-icons btn-see-password"
          data-id="#form-login\[password\]"
        >
          &#xe1e9;
        </span>
      </div>
    </div>
    <div>
      <button type="button" class="btn btn-brand-secondary w-100" id="btn-login">
        <%- page.i18n.login_button %>
      </button>
      <p class="mb-0 mt-1 text-center">
        <%- page.i18n.register_text %>
        <a href="/signup"><%- page.i18n.register_link %></a>
      </p>
    </div>
  </form>
</main>
